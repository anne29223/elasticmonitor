# ElasticMonitor Environment Variables
# Copy this file to .env.local and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@hostname:5432/database_name
PGDATABASE=your_database_name
PGHOST=your_database_host
PGPASSWORD=your_database_password
PGPORT=5432
PGUSER=your_database_user

# Elasticsearch Configuration (Self-Hosted)
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=elasticmonitor_secure_password_2025
# OR use API Key authentication
# ELASTICSEARCH_API_KEY=your_api_key_here

# Session Configuration (generate a random secret)
SESSION_SECRET=your_very_long_random_secret_string_here

# Optional: Node Environment
NODE_ENV=production